<p id="notice"><%= notice %></p>

<h1>Responses</h1>

<p>
    <%= link_to "Show Users", :users %><br>
    <%= link_to "Show Questions", :questions %><br>
</p>

<table>
    <tr>
        <th><%= sortable "question_id" %></th>
        <th><%= sortable "user_id" %></th>
        <th><%= sortable "is_gamified" %></th>
        <th><%= sortable "selection" %></th>
        <th><%= sortable "response_text" %></th>
    </tr>
    <% @responses.each do |response| %>
    <tr>
        <td><%= response.question_id + 1 %></td>
        <td><%= response.user_id %></td>
        <td><%= response.is_gamified %></td>
        <td><%= response.selection %></td>
        <td><%= response.response_text %></td>
    </tr>
    <% end %>
</table>

<br>

<%= link_to "Home", :root %>

