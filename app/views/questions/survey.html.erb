<p id="notice"><%= notice %></p>

<% flash.each do |key,value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<% if @current_user.is_gamified %>
Your point total is: <%= @user_point_total %>
<%= column_chart [{"name" => "Emergency Department", "data" => {"Department" => @ed_point_total}}, 
        {"name" => "Intensive Care Unit", "data" => {"Department" => @icu_point_total}}],
        colors: ["blue", "green"] %>
<% end %>

<form action="/questions#create", method="POST">

    <p><%= @question.to_ask %></p>
    <p>
        <input type="radio" name="selection" value="1">
        <%= @question.option_1 %>
    </p>
    <p>
        <input type="radio" name="selection" value="2">
        <%= @question.option_2 %>
    </p>
    <p>
        <input type="radio" name="selection" value="3">
        <%= @question.option_3 %>
    </p>
    <p><textarea name="response_text" maxlength="500" rows="5" placeholder="Character limit 500"></textarea></p>
    <p><input type="submit" value="Continue"></p>

</form>

<br>

<%= link_to 'View Instructions', '/questions/instructions' %><br>
<%= link_to 'Save and Exit', '/questions/confirmation' %>

