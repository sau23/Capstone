<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :gender %>
    <%= form.select :gender, 
        [
            'M', 
            'F', 
            'Other'
        ], 
        :include_blank => 'Please Select an Option' %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :department %>
    <%= form.select :department, 
        [
            'Emergency Department', 
            'Intensive Care Unit: Step Down', 
            'Intensive Care Unit: Floor'
        ], 
        :include_blank => 'Please Select an Option' %>
  </div>

  <div class="field">
    <%= form.label :clinical_year %>
    <%= form.select :clinical_year, 
        [
            'PGY1', 
            'PGY2',
            'PGY3', 
            'PGY4', 
            'PGY5', 
            'Attending'
        ], 
        :include_blank => 'Please Select an Option' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
