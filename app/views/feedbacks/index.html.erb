<p id="notice"><%= notice %></p>

<h1>Feedbacks</h1>

<table>
  <thead>
    <tr>
      <th><%= sortable "user_id", Feedback %></th>
      <th><%= sortable "experience", Feedback %></th>
      <th><%= sortable "future", Feedback %></th>
      <th><%= sortable "difficulty", Feedback %></th>
      <th><%= sortable "created_at", Feedback %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.user_id %></td>
        <td><%= feedback.experience %></td>
        <td><%= feedback.future %></td>
        <td><%= feedback.difficulty %></td>
        <td><%= feedback.created_at %></td>
        <td><%= link_to 'Show', feedback %></td>
        <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
        <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

